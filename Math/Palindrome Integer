# Programming > Math > Palindrome Integer

public class Solution {
	public boolean isPalindrome(int a) {
	    String s = "" + a;
	    for (int i = 0; i <= s.length()/2; i++) {
	        if (s.charAt(i) != s.charAt(s.length()-i-1)) {
	            return false;
	        }
	    }
	    return true;
	}
}
